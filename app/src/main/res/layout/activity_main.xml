<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lookForBluetoothButton"
        android:text="look for bluetooth"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/broadcastBluetoothButton"
        android:text="broadcast for bluetooth"
        app:layout_constraintTop_toBottomOf="@id/lookForBluetoothButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/openServerSocketButton"
        android:text="open server socket"
        app:layout_constraintTop_toBottomOf="@id/broadcastBluetoothButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/connectAsClientSocketButton"
        android:text="Connect as client"
        app:layout_constraintTop_toBottomOf="@id/openServerSocketButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendMessageButton"
        android:text="Send message"
        app:layout_constraintTop_toBottomOf="@id/connectAsClientSocketButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/leScanButton"
        android:text="LE Scan"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/sendMessageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>